<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center" >
    
    <Button
        android:id="@+id/coffeeShops"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
       	android:text="Coffee Shops" />
    
    <Button
        android:id="@+id/fastFoodOutlets"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
       	android:text="Fast Food Outlets" />
    
	<Button
        android:id="@+id/foodCourts"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
       	android:text="Food Courts" />
    
    <Button
        android:id="@+id/bars"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
       	android:text="Bars" />

	<Button
        android:id="@+id/sandwichShops"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
       	android:text="Sandwich Shops" />
    
    <Button
        android:id="@+id/cuisines"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
       	android:text="Select Cuisines" />

    <Button
        android:id="@+id/cost"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
       	android:text="Cost Search" />
</LinearLayout>