            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Preferences" >
        </activity>
        <activity android:name=".ViewResults" >
        </activity>
        <activity android:name=".SelectCategory" >
        </activity>
        <activity android:name=".SelectCuisines" >
        </activity>
        <activity android:name=".ViewPlaceDetails" >
        </activity>
        <activity android:name=".HaloView" >
        </activity>
        <activity android:name=".Favourites" >
        </activity>

        <uses-library android:name="com.google.android.maps" />
    </application>

</manifest>